<template>
  <tr>
    <th>{{ post.id }}</th>
    <th>{{ post.user_id }}</th>
    <th>
      <a :href="`/admin/posts/${post.id}?locale=uk`">{{ post.title }}</a>
    </th>
    <th>
      <a class="btn btn-link" :href="`/admin/posts/${post.id}/edit?locale=uk`">
        <span class="fa fa-pencil"></span>
      </a>
    </th>
    <th>
      <a class="btn btn-danger" @click.prevent="deletePost">
        <span class="fa fa-trash"></span>
      </a>
    </th>
  </tr>
</template>

<script>
  export default {
    props: ['post'],
    methods: {
      deletePost() {
        this.$http.delete(`/admin/posts/${this.post.id}`).then(response => {
          Turbolinks.visit('/admin/posts');
        },  response => {
          console.log(response);
        })
      },
    },
  };
</script>

